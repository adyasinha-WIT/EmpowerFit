@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EmpowerFit</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EmpowerFit.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet" />
   
</head>
<body>
    <header>

        <nav class="navbar navbar-expand-lg glass-navbar mb-4">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-white" asp-area="" asp-controller="Home" asp-action="Index">
                    EmpowerFit
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="Basic" asp-controller="Workout" asp-action="Index">Workouts</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="Basic" asp-controller="Tracking" asp-action="Index">Tracking</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="Basic" asp-controller="SafetyTips" asp-action="Index">Safety Tips</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="Basic" asp-controller="CommunitySupport" asp-action="Index">Community Support</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="Basic" asp-controller="SafetyFeatures" asp-action="Index">Safety Features</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="Basic" asp-controller="Premium" asp-action="Index">Premium Features</a>
                        </li>
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <!-- Show logout and admin dashboard if admin -->
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-warning" asp-area="Basic" asp-controller="Admin" asp-action="Index">Admin Dashboard</a>
                                </li>
                            }
                            <li class="nav-item">
                                <form asp-area="Identity" asp-page="/Account/Logout" method="post" id="logoutForm" class="d-inline">
                                    <button type="submit" class="nav-link btn btn-link text-white" style="display:inline; cursor:pointer;">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <partial name="_LoginPartial" />

@*                             <li class="nav-item">
                                <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">Register</a>
                            </li> *@
                        }
                </div>
            </div>
        </nav>



    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - EmpowerFit - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> -- Created by Sarah and Adya --
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
