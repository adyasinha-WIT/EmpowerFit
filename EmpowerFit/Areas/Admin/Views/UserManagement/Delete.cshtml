@model Microsoft.AspNetCore.Identity.IdentityUser
@{
    ViewData["Title"] = "Delete User";
}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card glass-card shadow border-0">
                <div class="card-body text-center">
                    <h2 class="fw-bold text-gradient mb-4">Delete User</h2>
                    <p class="mb-4">Are you sure you want to delete <span class="fw-bold">@Model.Email</span>?</p>
                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                    <a asp-action="Index" class="btn btn-outline-secondary ms-2">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .glass-card {
        background: rgba(245, 239, 255, 0.7);
        border-radius: 1.25rem;
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        box-shadow: 0 8px 32px 0 rgba(31,38,135,0.18);
    }

    .bg-gradient-primary {
        background: linear-gradient(90deg, #b14fc3 40%, #3a8dde 100%) !important;
    }

    .text-gradient {
        background: linear-gradient(90deg, #b14fc3 40%, #3a8dde 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-fill-color: transparent;
    }

    .text-purple {
        color: #8c1846;
    }
</style>