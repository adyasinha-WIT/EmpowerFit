@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>
@{
    ViewData["Title"] = "User Management";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col text-center">
            <h2 class="fw-bold text-gradient mb-3">User Management</h2>
            <p class="lead text-muted">View, edit, or delete users in the system.</p>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card glass-card shadow border-0">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-gradient-primary text-white">
                                <tr>
                                    <th>Email</th>
                                    <th>UserName</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <td>@user.Email</td>
                                        <td>@user.UserName</td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary me-2">Edit</a>
                                            <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .glass-card {
        background: rgba(245, 239, 255, 0.7);
        border-radius: 1.25rem;
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        box-shadow: 0 8px 32px 0 rgba(31,38,135,0.18);
    }

    .bg-gradient-primary {
        background: linear-gradient(90deg, #b14fc3 40%, #3a8dde 100%) !important;
    }

    .text-gradient {
        background: linear-gradient(90deg, #b14fc3 40%, #3a8dde 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-fill-color: transparent;
    }

    .text-purple {
        color: #8c1846;
    }
</style>