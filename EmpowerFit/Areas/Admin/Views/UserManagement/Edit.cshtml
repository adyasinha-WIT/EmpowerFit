@model Microsoft.AspNetCore.Identity.IdentityUser
@{
    ViewData["Title"] = "Edit User";
}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card glass-card shadow border-0">
                <div class="card-body">
                    <h2 class="fw-bold text-gradient mb-4">Edit User</h2>
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label"></label>
                            <input asp-for="UserName" class="form-control" />
                        </div>
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a asp-action="Index" class="btn btn-outline-secondary ms-2">Back</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .glass-card {
        background: rgba(245, 239, 255, 0.7);
        border-radius: 1.25rem;
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        box-shadow: 0 8px 32px 0 rgba(31,38,135,0.18);
    }

    .bg-gradient-primary {
        background: linear-gradient(90deg, #b14fc3 40%, #3a8dde 100%) !important;
    }

    .text-gradient {
        background: linear-gradient(90deg, #b14fc3 40%, #3a8dde 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-fill-color: transparent;
    }

    .text-purple {
        color: #8c1846;
    }
</style>