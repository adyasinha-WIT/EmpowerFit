@{
    ViewData["Title"] = "Reports";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col text-center">
            <h2 class="fw-bold text-gradient mb-3">Reports Dashboard</h2>
            <p class="lead text-muted">Analytics, user stats, SOS alerts, and more.</p>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-4 mb-4">
            <div class="card shadow glass-card border-0">
                <div class="card-header bg-gradient-primary text-white fs-5 fw-semibold">Total Users </div>
                <div class="card-body text-center">
                    <h5 class="card-title display-5 fw-bold text-purple">@ViewBag.UserCount</h5>
                </div>
            </div>
        </div>
        <!-- Add more cards for other stats as needed -->
    </div>
</div>

<style>
    .glass-card {
        background: rgba(245, 239, 255, 0.7);
        border-radius: 1.25rem;
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        box-shadow: 0 8px 32px 0 rgba(31,38,135,0.18);
    }

    .bg-gradient-primary {
        background: linear-gradient(90deg, #b14fc3 40%, #3a8dde 100%) !important;
    }

    .text-gradient {
        background: linear-gradient(90deg, #b14fc3 40%, #3a8dde 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-fill-color: transparent;
    }

    .text-purple {
        color: #8c1846;
    }
</style>
